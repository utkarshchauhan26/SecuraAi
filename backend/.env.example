# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database (Supabase Postgres)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# NextAuth / JWT Configuration
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
MAX_TOKENS_PER_REQUEST=2000

# Caching Configuration
CACHE_TTL=3600 # Time to live in seconds (1 hour)

# File Upload Configuration
UPLOADS_DIR=./uploads
TEMP_DIR=./temp
MAX_FILE_SIZE=104857600 # 100MB in bytes
MAX_FILES=50

# Semgrep Configuration
SEMGREP_TIMEOUT=30000 # 30 seconds in milliseconds
SEMGREP_MAX_TARGET_BYTES=20971520 # 20MB in bytes

# Cost Limits
DEFAULT_DAILY_BUDGET_CENTS=200 # $2.00 per day
MAX_DAILY_BUDGET_CENTS=10000 # $100.00 per day max

# GitHub Configuration (optional, for private repos)
GITHUB_TOKEN=your-github-token-if-needed
